{
  "name": "starship",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "dependencies": {
    "@babel/runtime": "^7.8.4",
    "@blueprintjs/core": "^3.28.2",
    "meteor-node-stubs": "^1.0.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-markdown": "^4.3.1",
    "react-simplemde-editor": "^4.1.2",
    "rich-markdown-editor": "^10.1.1"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  },
  "eslintConfig": {
    "env": {
      "es6": true
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "extends": [
      "plugin:react/recommended"
    ],
    "rules": {
      "jsx-quotes": [
        "error",
        "prefer-double"
      ],
      "curly": [
        "error",
        "multi-line"
      ],
      "eqeqeq": [
        "error",
        "always"
      ],
      "no-invalid-this": [
        "error"
      ],
      "array-bracket-spacing": [
        "error",
        "never"
      ],
      "block-spacing": [
        "error",
        "never"
      ],
      "brace-style": [
        "error",
        "1tbs",
        {
          "allowSingleLine": true
        }
      ],
      "semi": [
        "error",
        "always"
      ],
      "no-var": "error"
    }
  },
  "devDependencies": {
    "eslint-plugin-react": "^7.20.0"
  }
}
